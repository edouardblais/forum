extends layout

block content
  h1 Sign in!
  form(action='/log-in' method='POST')
    label(for='username') Username
    input(name='username' placeholder='username' type='text')
    label(for='password') Password
    input(name='password' type='password')
    button Sign In
  
  if errors
    ul
      for error in errors
        li!= error.msg